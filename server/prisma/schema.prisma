generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id       String  @id @default(uuid())
  username String
  email    String  @unique
  password String
  avatar   String  @default("https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png")
  property      property[]
  @@index([email])
}

model listing {
  id String @id @default(uuid())
  createAt DateTime
  updateAt DateTime
  name        String
  description String
  regularPrice Int
  discountPrice Int 
  offer Boolean
  type String 
  propertyRef property @relation(fields: [propertyId], references: [id])
  propertyId String @unique
  listingType   listing_type @relation(fields: [listingTypeId], references: [id])
  listingTypeId String
}

model listing_type {
  id String @id @default(uuid())
  description String
  listings    listing[]
}

model property {
  id String @id @default(uuid())
  bathrooms Int
  bedrooms Int
  furnished Boolean
  parking Boolean
  address     String
  imageUrl String
  userRef users @relation(fields: [userId], references: [id])
  userId String
  listing listing? 
}

